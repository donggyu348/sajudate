<!DOCTYPE html>
<html lang="ko">
<%- include('./../../common/header') %>

<style>
body { margin: 0; }

.saju-wrapper {
  width: 100%;
  max-width: 480px;
  min-height: 100vh;
  margin: 0 auto;
  background: url('/assets/images/tight/classic/input_background.png') center / cover no-repeat;
  display: flex;
  align-items: center;
}

.question-box {
  width: 100%;
  padding: 48px 24px;
}

.q-title {
  font-size: 22px;
  font-weight: 600;
  color: #2b2b2b;
  line-height: 1.4;
}

.q-desc {
  margin-top: 8px;
  font-size: 14px;
  color: #6b6b6b;
}

.answer-area {
  margin-top: 40px;
}

.answer-area input {
  width: 100%;
  background: transparent;
  border: none;
  border-bottom: 1.5px solid rgba(0,0,0,0.25);
  padding: 14px 4px;
  font-size: 18px;
  color: #2b2b2b;
  outline: none;
}

.answer-area input:focus {
  border-bottom-color: #5a4633;
}

.answer-area input::placeholder {
  color: rgba(0,0,0,0.35);
}

.select-row {
  display: flex;
  gap: 12px;
}

.select-btn {
  flex: 1;
  padding: 14px 0;
  border-radius: 999px;
  border: 1px solid rgba(0,0,0,0.25);
  background: rgba(255,255,255,0.4);
  font-size: 16px;
  color: #2b2b2b;
}

.select-btn.active {
  background: #5a4633;
  color: #fff;
  border-color: #5a4633;
}

.answer-area select {
  width: 100%;
  padding: 14px 12px;
  border-radius: 12px;
  border: 1px solid rgba(0,0,0,0.25);
  background: rgba(255,255,255,0.4);
  font-size: 16px;
  color: #2b2b2b;
}

.next-btn {
  margin-top: 60px;
  width: 100%;
  padding: 16px 0;
  border-radius: 999px;
  border: none;
  background: #e9e4dc;
  font-size: 16px;
  font-weight: 600;
  color: #2b2b2b;
}
</style>

<body>

<div class="saju-wrapper">
  <form id="sajuForm" method="POST" action="/saju/classic/result" class="question-box">

    <!-- üîí Í∏∞Ï°¥ hidden Ïú†ÏßÄ -->
    <input type="hidden" name="gender" id="genderInput">
    <input type="hidden" name="birthType" id="birthTypeInput" value="ÏñëÎ†•">

    <!-- üîí Ïã§Ï†ú ÏÑúÎ≤ÑÎ°ú Ï†ÑÏÜ°ÎêòÎäî input (Í∏∞Ï°¥ name Ïú†ÏßÄ) -->
    <input type="hidden" name="name">
    <input type="hidden" name="birthdate">
    <!-- birthTimeÏùÄ selectÏóê Í∑∏ÎåÄÎ°ú name ÏÇ¨Ïö© -->

    <div class="question-text">
      <div class="q-title"></div>
      <div class="q-desc"></div>
    </div>

    <div class="answer-area"></div>

    <button type="button" class="next-btn" id="nextBtn">Îã§ÏùåÏúºÎ°ú</button>

  </form>
</div>

<script>
/* ===============================
   ÏßàÎ¨∏ Ï†ïÏùò (UIÎßå Ï†úÏñ¥)
   üîí keyÎäî ÏÑúÎ≤Ñ Ï†ÑÏÜ°Ïö© nameÍ≥º Îß§Ìïë
================================ */
const steps = [
  {
    key: "name",
    title: "Î®ºÏ†Ä, Ïñ¥ÎñªÍ≤å Î∂àÎü¨ÎìúÎ¶¨Î©¥ Îê†ÍπåÏöî?",
    desc: "Ìé∏ÌïòÍ≤å ÏÇ¨Ïö©Ìï† Ïù¥Î¶ÑÏù¥Î©¥ Îê©ÎãàÎã§.",
    render: () => `
      <input type="text" placeholder="Ïù¥Î¶ÑÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî">
    `,
    validate: () => {
      const v = document.querySelector('.answer-area input').value.trim();
      if (!v) return false;
      document.querySelector('input[name="name"]').value = v;
      return true;
    }
  },
  {
    key: "gender",
    title: "ÏÑ±Î≥ÑÏùÑ ÏïåÎ†§Ï£ºÏÑ∏Ïöî",
    desc: "ÏÑ±Î≥ÑÏóê Îî∞Îùº Ìï¥ÏÑù Í∏∞Ï§ÄÏù¥ Îã¨ÎùºÏßëÎãàÎã§.",
    render: () => `
      <div class="select-row">
        <button type="button" class="select-btn" data-value="ÎÇ®ÏÑ±">ÎÇ®ÏÑ±</button>
        <button type="button" class="select-btn" data-value="Ïó¨ÏÑ±">Ïó¨ÏÑ±</button>
      </div>
    `,
    validate: () => {
      return !!document.getElementById('genderInput').value;
    }
  },
  {
    key: "birthdate",
    title: "ÌÉúÏñ¥ÎÇú ÎÇ†ÏùÑ ÏïåÎ†§Ï£ºÏÑ∏Ïöî",
    desc: "YYYYMMDD ÌòïÏãùÏúºÎ°ú ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.",
    render: () => `
      <input type="text" maxlength="8" placeholder="Ïòà) 19940517">
    `,
    validate: () => {
      const v = document.querySelector('.answer-area input').value.trim();
      if (!/^\d{8}$/.test(v)) return false;
      document.querySelector('input[name="birthdate"]').value = v;
      return true;
    }
  },
  {
    key: "birthTime",
    title: "ÌÉúÏñ¥ÎÇú ÏãúÎ•º ÏïåÍ≥† Í≥ÑÏã†Í∞ÄÏöî?",
    desc: "Î™®Î•¥ÏÖîÎèÑ Í¥úÏ∞ÆÏäµÎãàÎã§.",
    render: () => `
      <select name="birthTime">
        <option value="99">Î™®Î¶Ñ</option>
        <option value="00">Ï°∞Ïûê (00:00~01:29)</option>
        <option value="02">Ï∂ï (01:30~03:29)</option>
        <option value="04">Ïù∏ (03:30~05:29)</option>
        <option value="06">Î¨ò (05:30~07:29)</option>
        <option value="08">ÏßÑ (07:30~09:29)</option>
        <option value="10">ÏÇ¨ (09:30~11:29)</option>
        <option value="12">Ïò§ (11:30~13:29)</option>
        <option value="14">ÎØ∏ (13:30~15:29)</option>
        <option value="16">Ïã† (15:30~17:29)</option>
        <option value="18">Ïú† (17:30~19:29)</option>
        <option value="20">Ïà† (19:30~21:29)</option>
        <option value="22">Ìï¥ (21:30~23:29)</option>
        <option value="24">ÏïºÏûê (23:30~23:59)</option>
      </select>
    `,
    validate: () => true
  }
];

let stepIndex = 0;

const qTitle = document.querySelector('.q-title');
const qDesc = document.querySelector('.q-desc');
const answerArea = document.querySelector('.answer-area');
const nextBtn = document.getElementById('nextBtn');

function renderStep() {
  const step = steps[stepIndex];
  qTitle.textContent = step.title;
  qDesc.textContent = step.desc || '';
  answerArea.innerHTML = step.render();

  document.querySelectorAll('.select-btn').forEach(btn => {
    btn.onclick = () => {
      document.querySelectorAll('.select-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');
      document.getElementById('genderInput').value = btn.dataset.value;
    };
  });

  nextBtn.textContent = stepIndex === steps.length - 1
    ? 'Í∏∞Î°ùÏùÑ ÏãúÏûëÌï©ÎãàÎã§'
    : 'Îã§ÏùåÏúºÎ°ú';
}

nextBtn.onclick = () => {
  if (!steps[stepIndex].validate()) {
    alert('Í∞íÏùÑ ÏûÖÎ†•Ìï¥Ï£ºÏÑ∏Ïöî.');
    return;
  }

  if (stepIndex < steps.length - 1) {
    stepIndex++;
    renderStep();
  } else {
    document.getElementById('sajuForm').submit();
  }
};

renderStep();
</script>

</body>
</html>
